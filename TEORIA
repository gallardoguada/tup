IF anidado con múltiples alternativas
c
Copiar
Editar
#include <stdio.h>
#include <conio.h>

int main() {
    int num;
    printf("Ingrese un número entero por teclado: ");
    scanf("%d", &num);

    if (num > 0)
        printf("%d es POSITIVO", num);
    else if (num == 0)
        printf("Es igual a cero\n");
    else
        printf("%d es negativo\n", num);

    getch();
    return 0;
}
